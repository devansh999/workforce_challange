<%= form_with model: @organisation do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>

  </div>
  <br>
  <div>
    <%= form.label :hourly_rate %><br>
    <%= form.text_field :hourly_rate  %>
  </div>

  <div>
    <% @organisation.errors.full_messages.each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <br>
  <div>
    <%= form.submit %>
  </div>
<% end %>
